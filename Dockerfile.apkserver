# Use the Nginx image as a base
FROM nginx:latest

# Set working directory to Nginx's html directory
WORKDIR /usr/share/nginx/html

# Copy the APK file into the web server directory
COPY path/to/taler-wallet.apk /usr/share/nginx/html/taler-wallet.apk

# Set up Nginx configuration to serve the APK file
RUN echo 'server { listen 80; location / { root /usr/share/nginx/html; autoindex on; } }' > /etc/nginx/conf.d/default.conf

# Expose port 80 for web access
EXPOSE 80